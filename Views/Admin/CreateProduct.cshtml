@model DoAnThietKeWeb1.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var existingCategories = ViewBag.ExistingCategories as List<string> ?? new List<string>();
}

<h2>Thêm sản phẩm mới</h2>

<form asp-action="CreateProduct" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="ProductName">Tên sản phẩm</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Link hình ảnh</label>
        <input asp-for="Image" class="form-control" id="image-url" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <!-- Ảnh xem trước -->
    <div class="form-group mt-3">
        <label>Xem trước ảnh:</label><br />
        <img id="preview-image"
             src="@Model?.Image"
             style="max-height: 200px; border: 1px solid #ccc; padding: 5px;" />
    </div>


    <div class="form-group">
        <label asp-for="Price">Giá (VNĐ)</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Danh mục</label>
        <input asp-for="Category" class="form-control" list="categoryList" />
        <datalist id="categoryList">
            @foreach (var category in existingCategories.Distinct())
            {
                <option value="@category"></option>
            }
        </datalist>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="Trending"
                   name="Trending" value="true" checked="@(Model?.Trending == true)" />
            <label class="form-check-label" for="Trending">Sản phẩm nổi bật</label>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Thêm sản phẩm</button>
    <a asp-action="ManageProducts" class="btn btn-secondary">Hủy</a>
</form>
@section Scripts {
    <script>
        const imageInput = document.getElementById("image-url");
        const previewImage = document.getElementById("preview-image");

        function updatePreview() {
            const url = imageInput.value.trim();
            if (url) {
                previewImage.src = url;
            } else {
                previewImage.src = "https://via.placeholder.com/200x150?text=Chưa+có+ảnh";
            }
        }

        // Cập nhật ảnh mỗi khi nhập link mới
        imageInput.addEventListener("input", updatePreview);

        // Nếu link ảnh lỗi, hiển thị ảnh mặc định
        previewImage.onerror = () => {
            previewImage.src = "https://via.placeholder.com/200x150?text=Ảnh+không+hợp+lệ";
        };
    </script>
}

