@model DoAnThietKeWeb1.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var existingCategories = ViewBag.ExistingCategories as List<string> ?? new List<string>();
}

<h2>Thêm sản phẩm mới</h2>

<form asp-action="CreateProduct" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="ProductName">Tên sản phẩm</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Link hình ảnh</label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Giá (VNĐ)</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Danh mục</label>
        <input asp-for="Category" class="form-control" list="categoryList" />
        <datalist id="categoryList">
            @foreach (var category in existingCategories.Distinct())
            {
                <option value="@category"></option>
            }
        </datalist>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="Trending"
                   name="Trending" value="true" checked="@(Model?.Trending == true)" />
            <label class="form-check-label" for="Trending">Sản phẩm nổi bật</label>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Thêm sản phẩm</button>
    <a asp-action="ManageProducts" class="btn btn-secondary">Hủy</a>
</form>
