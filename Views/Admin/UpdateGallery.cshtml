@model Gallery 
@using Microsoft.AspNetCore.Mvc.Controllers  
@{
    Layout = "_AdminLayout";
    var isEdit = !string.IsNullOrEmpty(Model?.GalleryId); // Nếu có ID → là sửa\n ảnh
    ViewData["Title"] = isEdit ? "Chỉnh sửa ảnh" : "Thêm ảnh mới";
}

<h2>@(isEdit ? "Chỉnh sửa ảnh" : "Thêm ảnh mới")</h2>

<form asp-action="@(isEdit ? "GalleryEdit" : "GalleryCreate")" method="post">
    @if (isEdit)
    {
        <input type="hidden" asp-for="GalleryId" />
    }
    <div class="mb-3">
        <label>Tiêu đề ảnh</label>
        <input asp-for="ImageName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Đường dẫn ảnh (URL)</label>
        <input asp-for="Path" class="form-control" id="image-url" />
    </div>

    <div class="mb-3">
        <label>Ảnh xem trước:</label><br />
        <img id="preview-image"
             src="@Model.Path"
             style="max-height: 200px; border: 1px solid #ccc; padding: 5px;" />
    </div>



    <button class="btn btn-success">Lưu</button>
</form>
@section Scripts {
    <script>
        const urlInput = document.getElementById('image-url');
        const previewImage = document.getElementById('preview-image');

        function updatePreview() {
            const url = urlInput.value.trim();
            if (url) {
                previewImage.src = url;
            } else {
                previewImage.src = ""; // hoặc ảnh mặc định
            }
        }

        urlInput.addEventListener('input', updatePreview);

        // Xử lý ảnh lỗi nếu URL không hợp lệ
        previewImage.onerror = () => {
            previewImage.src = "https://via.placeholder.com/200x150?text=Ảnh+không+hợp+lệ";
        };
    </script>
}


