@{
    ViewData["Title"] = "Liên Hệ - GorocoShop";
}
}
<div class="heading">
    <h1>Liên Hệ Với Chúng Tôi</h1>
    <p> <a asp-controller="Home" asp-action="HomeIndex">Trang Chủ >></a> Liên Hệ </p>
</div>

<section class="contact">

    <div class="icons-container">

        <div class="icons">
            <i class="fas fa-phone"></i>
            <h3>Số Điện Thoại</h3>
            <p>+123-456-7890</p>
            <p>+111-222-3333</p>
        </div>

        <div class="icons">
            <i class="fas fa-envelope"></i>
            <h3>Email</h3>
            <p>hellofreewebsitecode@gmail.com</p>
            <p>hellofreewebsitecode@gmail.com</p>
        </div>

        <div class="icons">
            <i class="fas fa-map-marker-alt"></i>
            <h3>Địa Chỉ</h3>
            <p>Mumbai, Ấn Độ - 400104</p>
        </div>

    </div>

    <div class="row">

        <form action="">
            <h3>Gửi Tin Nhắn Cho Chúng Tôi</h3>
            <div class="inputBox">
                <input type="text" placeholder="Nhập tên của bạn" class="box">
                <input type="email" placeholder="Nhập email của bạn" class="box">
            </div>
            <div class="inputBox">
                <input type="number" placeholder="Nhập số điện thoại của bạn" class="box">
                <input type="text" placeholder="Nhập tiêu đề" class="box">
            </div>
            <textarea placeholder="Nội dung tin nhắn" cols="30" rows="10"></textarea>
            <input type="submit" value="Gửi Tin Nhắn" class="btn">
        </form>

        <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3903.118120696384!2d108.43399327560317!3d11.966322936119179!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317112c929cbd58f%3A0x5842b98761c9e0eb!2zVHLGsOG7nW5nIMSQ4bqhaSBI4buNYyBZZXJzaW4gxJDDoCBM4bqhdA!5e0!3m2!1svi!2s!4v1748099527643!5m2!1svi!2s" allowfullscreen="" loading="lazy"></iframe>
    </div>

</section>
