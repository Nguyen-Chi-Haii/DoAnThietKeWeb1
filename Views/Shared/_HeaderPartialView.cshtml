 <header class="header">

        <a asp-controller ="Home" asp-action="HomeIndex" class="logo"> <i class="fas fa-shopping-basket"></i> groco </a>

        <nav class="navbar">
            <a asp-controller ="Home" asp-action="HomeIndex">home</a>
            <a asp-controller ="Shop" asp-action="ShopIndex">shop</a>
            <a asp-controller ="About" asp-action="AboutIndex">about</a>
            <a asp-controller ="Review" asp-action="ReviewIndex">review</a>
            <a asp-controller ="Blog" asp-action="BlogIndex">blog</a>
            <a asp-controller ="Contact" asp-action="ContactIndex">contact</a>
        </nav>

    <div class="icons">
        <div id="menu-btn" class="fas fa-bars"></div>
        <div id="search-btn" class="fas fa-search"></div>
        <div id="cart-btn" class="fas fa-shopping-cart"></div>
        <div id="login-btn" class="fas fa-user"></div>
    </div>

    <form action="" class="search-form">
        <input type="search" placeholder="search here..." id="search-box">
        <label for="search-box" class="fas fa-search"></label>
    </form>

    <div class="shopping-cart">
        <div class="box">
            <i class="fas fa-times"></i>
            <img src="https://via.placeholder.com/100x100?text=Product+1" alt="">
            <div class="content">
                <h3>organic food</h3>
                <span class="quantity">1</span>
                <span class="multiply">x</span>
                <span class="price">$18.99</span>
            </div>
        </div>
        <div class="box">
            <i class="fas fa-times"></i>
            <img src="https://via.placeholder.com/100x100?text=Product+2" alt="">
            <div class="content">
                <h3>organic food</h3>
                <span class="quantity">1</span>
                <span class="multiply">x</span>
                <span class="price">$18.99</span>
            </div>
        </div>
        <div class="box">
            <i class="fas fa-times"></i>
            <img src="https://via.placeholder.com/100x100?text=Product+3" alt="">
            <div class="content">
                <h3>organic food</h3>
                <span class="quantity">1</span>
                <span class="multiply">x</span>
                <span class="price">$18.99</span>
            </div>
        </div>
        <h3 class="total"> total : <span>$56.97</span> </h3>
        <a asp-controller="Cart" asp-action="CartIndex" class="btn">checkout cart</a>
    </div>

    <div class="login-form">
        <div class="form-tabs">
            <a href="/Account/Login" class="tab-link">
                <i class="fas fa-sign-in-alt"></i> <span>Đăng nhập</span>
            </a>

            <div class="divider">
                <span>HOẶC</span>
            </div>

            <a href="/Account/Register" class="tab-link">
                <i class="fas fa-user-plus"></i> <span>Đăng ký</span>
            </a>
        </div>
    </div>

</header>